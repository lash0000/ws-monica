doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Withdrawn Application, Barangay Santa Monica Services from Quezon City. 
    style.
      body {
        margin: 0;
        padding: 20px;
        font-family: 'Arial', sans-serif;
        background-color: #f1f1f1;
      }
      @media only screen and (max-width: 600px) {
        body {
          padding: 10px !important;
        }

        div[style*="max-width:600px"] {
          max-width: 100% !important;
          margin: 0 auto !important;
          border-radius: 0 !important;
        }

        div[style*="padding:32px 40px"] {
          padding: 20px !important;
        }

        div[style*="padding:36px"] {
          padding: 24px !important;
        }

        img {
          width: 150px !important;
          height: auto !important;
        }

        div[style*="font-size:24px"] {
          font-size: 20px !important;
        }

        div[style*="font-size:14px"] {
          font-size: 13px !important;
          line-height: 1.5 !important;
        }

        div[style*="padding:16px 40px"] {
          padding: 12px 20px !important;
        }
      }
  body
    div(style="max-width:600px;margin:0 auto;background-color:#ffffff;border-radius:12px;overflow:hidden;box-shadow:0 2px 8px rgba(0,0,0,0.1);border: 1px solid #E2E8F0;")
      
      // Header
      div(style="background-color:#227D53;text-align:center;")
        div(style="display:inline-block;")
          img(src="https://95306gu5u4.ufs.sh/f/uBRuoG2BEPFDBrb1g0aDM9AeOZ3oCyXH0dsq5UuJjlR2vx1t", alt="Unofficial Logo", style="width:200px;object-fit:cover;")

      // Content
      div(style="padding:32px 40px;color:#333333;line-height:1.6;")
